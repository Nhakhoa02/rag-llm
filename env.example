# Distributed Indexing System Environment Configuration

# =============================================================================
# GEMINI AI CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyAWAlDEzwmxp6aAJofPeilgsWGUGmscgl0

# =============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key-here  # Optional for local development

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Set to false in production

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
VECTOR_DIMENSION=768
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE=104857600  # 100MB in bytes

# =============================================================================
# DATABASE CONFIGURATION (Optional - for full distributed setup)
# =============================================================================
# Cassandra
CASSANDRA_HOSTS=["localhost:9042"]
CASSANDRA_KEYSPACE=rag_llm
CASSANDRA_USERNAME=
CASSANDRA_PASSWORD=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=rag-llm

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Prometheus
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_HOST=localhost
GRAFANA_PORT=3000

# Jaeger (distributed tracing)
JAEGER_HOST=localhost
JAEGER_PORT=16686

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Kubernetes namespace (if using K8s)
K8S_NAMESPACE=rag-llm

# Docker registry
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE=rag-llm
DOCKER_TAG=latest 